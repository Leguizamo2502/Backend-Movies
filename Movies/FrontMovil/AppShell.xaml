<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="FrontMovil.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:auth="clr-namespace:FrontMovil.Views.Auth"
    xmlns:movies="clr-namespace:FrontMovil.Views.Movies"
    Shell.FlyoutBehavior="Disabled"
    Title="FrontMovil">

    <!-- Pantalla de Login -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate auth:LoginPage}"
        Route="LoginPage" />

    <!-- Pantalla principal (Movies) -->
    <ShellContent
        Title="Movies"
        ContentTemplate="{DataTemplate movies:MovieListPage}"
        Route="MoviePage" />

</Shell>
