<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil.Views.MovieGenre.MovieGenreListPage"
             BackgroundColor="{StaticResource Bg}"
             Title="Películas por género"
             x:Name="PageMovieGenre">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Agregar"
                     Priority="0"
                     Order="Primary"
                     Command="{Binding CreateCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,*" Padding="16">
        <Label Grid.Row="0"
               Text="{Binding Title}"
               FontAttributes="Bold"
               FontSize="22"
               TextColor="{StaticResource TextPrimary}" />

        <ActivityIndicator Grid.Row="1"
                           IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           Color="{StaticResource Primary}" />

        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding LoadCommand}">
            <CollectionView ItemsSource="{Binding Items}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <Label Text="Sin datos"
                           TextColor="{StaticResource TextSecondary}"
                           Margin="12" />
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardDark}">
                            <Grid ColumnDefinitions="*,Auto,Auto"
                                  ColumnSpacing="8"
                                  Padding="8">
                                <VerticalStackLayout Grid.Column="0" Spacing="4">
                                    <Label Text="{Binding Title}" Style="{StaticResource TitleLg}" />
                                    <Label Text="{Binding GenreName}" Style="{StaticResource MetaSm}" />
                                </VerticalStackLayout>

                                <Button Grid.Column="1"
                                        Text="Editar"
                                        Command="{Binding BindingContext.EditCommand, Source={x:Reference PageMovieGenre}}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="{StaticResource Primary}"
                                        TextColor="White"
                                        CornerRadius="10"
                                        Padding="10,6"
                                        HeightRequest="36" />

                                <Button Grid.Column="2"
                                        Text="Eliminar"
                                        Command="{Binding BindingContext.DeleteCommand, Source={x:Reference PageMovieGenre}}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="#D32F2F"
                                        TextColor="White"
                                        CornerRadius="10"
                                        Padding="10,6"
                                        HeightRequest="36" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
