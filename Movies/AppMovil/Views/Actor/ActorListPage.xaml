<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="AppMovil.Views.Actor.ActorListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{StaticResource Bg}"
    Title="Actores"
    x:Name="PageRoot">

    <!-- Botón para crear -->
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Agregar"
                     Priority="0"
                     Order="Primary"
                     Command="{Binding CreateCommand}" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,*" Padding="16">

        <!-- Título -->
        <Label Grid.Row="0"
               Text="{Binding Title}"
               FontAttributes="Bold"
               FontSize="22"
               TextColor="{StaticResource TextPrimary}" />

        <!-- Indicador primera carga -->
        <ActivityIndicator Grid.Row="1"
                           IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           Color="{StaticResource Primary}" />

        <!-- Pull-to-refresh -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding LoadCommand}">
            <CollectionView ItemsSource="{Binding Items}"
                            SelectionMode="None">
                <CollectionView.EmptyView>
                    <Label Text="Sin datos"
                           TextColor="{StaticResource TextSecondary}"
                           Margin="12"/>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Acciones por ítem -->
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems Mode="Execute">
                                    <SwipeItem Text="Editar"
                                               BackgroundColor="{StaticResource Primary}"
                                               Command="{Binding BindingContext.EditCommand, Source={x:Reference PageRoot}}"
                                               CommandParameter="{Binding .}" />
                                    <SwipeItem Text="Eliminar"
                                               BackgroundColor="#D32F2F"
                                               Command="{Binding BindingContext.DeleteCommand, Source={x:Reference PageRoot}}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <!-- Card -->
                            <Border Style="{StaticResource CardDark}">
                                <VerticalStackLayout Spacing="6">
                                    <Label Text="{Binding Name}"
                                           Style="{StaticResource TitleLg}" />
                                    <Label Text="{Binding BirthYear}"
                                           Style="{StaticResource MetaSm}" />

                                    <!-- Tap para editar -->
                                    <VerticalStackLayout.GestureRecognizers>
                                        <TapGestureRecognizer
                                            Command="{Binding BindingContext.EditCommand, Source={x:Reference PageRoot}}"
                                            CommandParameter="{Binding .}" />
                                    </VerticalStackLayout.GestureRecognizers>
                                </VerticalStackLayout>
                            </Border>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
