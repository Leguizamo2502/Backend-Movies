<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMovil.Views.Users.UserFormPage"
             BackgroundColor="{StaticResource Bg}"
             
             Title="Usuarios">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <!-- Encabezado -->
            <Label 
            Text="Informaci칩n del actor"
            FontAttributes="Bold"
            FontSize="22"
            TextColor="{StaticResource TextPrimary}" />

            <!-- Campo: Nombre -->
            <VerticalStackLayout>
                <Label Text="Nombre" 
                   FontAttributes="Bold" 
                   TextColor="{StaticResource TextSecondary}" />
                <Entry Text="{Binding Name}" 
                   Placeholder="Ej: Tom Hanks"
                   TextColor="{StaticResource TextPrimary}" />
            </VerticalStackLayout>

            <!-- Campo: A침o de nacimiento -->
            <VerticalStackLayout>
                <Label Text="Email"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextSecondary}" />
                <Entry Text="{Binding Email}"
                   Placeholder="Ej: example@gmail.com"
                   TextColor="{StaticResource TextPrimary}" />
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Label Text="Contrase침a"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextSecondary}" />
                            <Entry Text="{Binding Password}"
                   Placeholder="Contrase침a"
                   TextColor="{StaticResource TextPrimary}" />
            </VerticalStackLayout>

            <!-- Indicador de carga -->
            <ActivityIndicator 
            IsRunning="{Binding IsBusy}"
            IsVisible="{Binding IsBusy}"
            Color="{StaticResource Primary}" />

            <!-- Botones -->
            <HorizontalStackLayout Spacing="12">
                <Button 
                Text="Guardar"
                Command="{Binding SaveCommand}"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="8"
                HorizontalOptions="FillAndExpand" />

                <Button 
                Text="Eliminar"
                Command="{Binding DeleteCommand}"
                BackgroundColor="#D32F2F"
                TextColor="White"
                CornerRadius="8"
                HorizontalOptions="FillAndExpand"
                IsVisible="{Binding Id, Converter={StaticResource GreaterThanZeroConverter}}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>